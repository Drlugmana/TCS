// src/api/problems.js

function getApiBase() {
  // Vite: usa import.meta.env (NO process.env)
  const fromVite = (import.meta?.env?.VITE_API_BASE_URL || "").trim();
  if (fromVite) return fromVite.replace(/\/+$/, "");

  // Opcional: si algún día quieres inyectarlo desde index.html
  const fromWindow = (window.__API_BASE_URL__ || "").trim();
  if (fromWindow) return fromWindow.replace(/\/+$/, "");

  // Fallback: tu backend local (según tus screenshots)
  return "https://localhost:44334";
}

const API_BASE = getApiBase();

// Normaliza ambiente a lo que tu UI ya usa
export function normalizeEnvironment(env) {
  const e = String(env || "").trim();
  if (!e) return "";
  if (e.toLowerCase() === "noproductivo") return "No Productivo";
  if (e.toLowerCase() === "productivo") return "Productivo";
  return e; // por si viene ya con espacio u otro valor
}

// Rango ISO: desde ayer (00:00) hasta ahora
export function getYesterdayToNowRangeIso() {
  const now = new Date();

  const start = new Date(now);
  start.setDate(start.getDate() - 1);
  start.setHours(0, 0, 0, 0);

  // backend suele aceptar ISO; si el tuyo acepta otro formato, avísame
  const startIso = start.toISOString();
  const endIso = now.toISOString();

  return { startIso, endIso };
}

// Convierte el objeto del backend a tu forma esperada por el Front
function mapProblem(p) {
  return {
    ...p,
    // Normalizaciones para que tu UI cuente bien Productivo/No Productivo:
    environment: normalizeEnvironment(p.environment || p.Environment),

    // Normalizaciones para que ProblemCard encuentre datos:
    startTime: p.startTime || p.StartTime,
    endTime: p.endTime || p.EndTime,
    status: p.status || p.Status,
    severityLevel: p.severityLevel || p.SeverityLevel,
    impactLevel: p.impactLevel || p.ImpactLevel,
    title: p.title || p.Title,

    // IDs:
    displayId: p.displayId || p.DisplayId,
    problemId: p.problemId || p.ProblemId,

    // Tenant:
    tenant: p.tenant || p.Tenant,

    // Affected:
    affectedCI: p.affectedCI || p.AffectedCI || p.affectedCi || [],
  };
}

// Trae 1 página desde /api/problems (tu endpoint real)
export async function fetchProblemsPage({
  pageNumber = 1,
  pageSize = 50,
  startIso = null,
  endIso = null,
  jurisdiction = null,
  status = null, // "OPEN" o "CLOSED" opcional
  signal,
} = {}) {
  const url = new URL(`${API_BASE}/api/problems`);

  url.searchParams.set("pageNumber", String(pageNumber));
  url.searchParams.set("pageSize", String(pageSize));

  // Estos nombres de filtros dependen de tu backend.
  // Si tu backend NO los soporta, igual funcionará sin filtrar.
  if (startIso) url.searchParams.set("startTime", startIso);
  if (endIso) url.searchParams.set("endTime", endIso);
  if (jurisdiction) url.searchParams.set("jurisdiction", jurisdiction);
  if (status) url.searchParams.set("status", status);

  const res = await fetch(url.toString(), {
    method: "GET",
    headers: {
      Accept: "application/json",
    },
    signal,
  });

  if (!res.ok) {
    const text = await res.text().catch(() => "");
    throw new Error(`fetchProblemsPage failed ${res.status}: ${text}`);
  }

  const json = await res.json();

  const data = Array.isArray(json?.data) ? json.data.map(mapProblem) : [];
  const totalPages = Number(json?.totalPages || 0);
  const totalRecords = Number(json?.totalRecords || 0);

  return { data, totalPages, totalRecords };
}

// Trae varias páginas (para llenar tu lista)
export async function fetchProblemsRange({
  startIso,
  endIso,
  jurisdiction = null,
  status = null,
  pageSize = 1000,
  maxPages = 60,
  signal,
  onBatch,
} = {}) {
  let page = 1;
  let pagesSeen = 0;

  while (pagesSeen < maxPages) {
    const { data, totalPages } = await fetchProblemsPage({
      pageNumber: page,
      pageSize,
      startIso,
      endIso,
      jurisdiction,
      status,
      signal,
    });

    if (onBatch) onBatch(data);

    pagesSeen += 1;

    // si no hay más data, corta
    if (!data.length) break;

    // si el backend reporta totalPages, respétalo
    if (totalPages && page >= totalPages) break;

    page += 1;
  }
}

// ✅ “Firma” sin endpoint extra: trae 1 registro y construye una firma estable
export async function fetchLatestSignature({
  startIso,
  endIso,
  jurisdiction = null,
  signal,
} = {}) {
  const { data } = await fetchProblemsPage({
    pageNumber: 1,
    pageSize: 1,
    startIso,
    endIso,
    jurisdiction,
    signal,
  });

  const first = data?.[0];
  if (!first) return null;

  const id = first.displayId || first.problemId || "";
  const st = first.startTime || "";
  const status = first.status || "";
  return `${id}|${st}|${status}`;
}

