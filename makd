// src/api/problems.js
// ✅ En IIS/producción debe ser RELATIVO para que funcione en otras máquinas.
// ✅ Si existe VITE_API_BASE_URL lo usa, si no usa "/api".

const API_BASE = (import.meta.env.VITE_API_BASE_URL || "/api").replace(/\/$/, "");

export async function fetchProblemsLatest({
  pageNumber = 1,
  pageSize = 500,
  jurisdiction = null, // "TCS" o "OTROS"
} = {}) {
  const params = new URLSearchParams();
  params.set("pageNumber", String(pageNumber));
  params.set("pageSize", String(pageSize));
  if (jurisdiction) params.set("jurisdiction", jurisdiction);

  const url = `${API_BASE}/Problems/latest?${params.toString()}`;

  const res = await fetch(url, {
    method: "GET",
    headers: { Accept: "application/json" },
  });

  if (!res.ok) {
    const text = await res.text().catch(() => "");
    throw new Error(`Error ${res.status} en ${url}. ${text}`);
  }

  return res.json();
}