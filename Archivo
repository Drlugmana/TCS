using Microsoft.EntityFrameworkCore;
using RestAPIDynatrace.Context;
using Microsoft.Extensions.Hosting.WindowsServices;

var builder = WebApplication.CreateBuilder(args);

// ðŸ”¹ Permitir que se ejecute como servicio de Windows
builder.Host.UseWindowsService();

// ðŸ”¹ Configurar Kestrel (puerto, tamaÃ±o y tiempo de espera)
builder.WebHost.ConfigureKestrel(serverOptions =>
{
    serverOptions.Limits.MaxRequestBodySize = 104857600; // 100 MB
    serverOptions.Limits.KeepAliveTimeout = TimeSpan.FromMinutes(10);
    serverOptions.Limits.RequestHeadersTimeout = TimeSpan.FromMinutes(10);
});

// ðŸ”¹ CORS para permitir acceso desde tu Frontend (React)
builder.Services.AddCors(options =>
{
    options.AddPolicy("AllowFrontend", policy =>
    {
        policy.AllowAnyOrigin()
              .AllowAnyHeader()
              .AllowAnyMethod();
    });
});

// ðŸ”¹ Configurar servicios base
builder.Services.AddControllers();
builder.Services.AddEndpointsApiExplorer();
builder.Services.AddSwaggerGen();

// ðŸ”¹ Configurar conexiÃ³n a base de datos
var connectionString = builder.Configuration.GetConnectionString("Conexion");
builder.Services.AddDbContext<AppDBContext>(options => options.UseSqlServer(connectionString));

var app = builder.Build();

// ðŸ”¹ Usar CORS
app.UseCors("AllowFrontend");

// ðŸ”¹ Habilitar Swagger siempre (tambiÃ©n en ProducciÃ³n)
app.UseSwagger();
app.UseSwaggerUI();

// ðŸ”¹ Evitar redirecciÃ³n HTTPS si no hay certificado
// app.UseHttpsRedirection();  // âŒ deshabilitado

app.UseAuthorization();
app.MapControllers();

// ðŸ”¹ Endpoint simple de verificaciÃ³n
app.MapGet("/", () => Results.Ok("âœ… API RestAPIDynatraceReportes funcionando correctamente en el servidor"));

app.Run();