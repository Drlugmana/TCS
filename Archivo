= Table.TransformColumns(
    Source,
    {
        {"CPU_Used_Porcentaje",
            each
                let
                    txt = Text.Replace(Text.From(_), ".", ","),
                    val = try Number.FromText(txt, "es-EC") otherwise null
                in
                    if val = null then null else Number.Round(val, 2),
            type number}
    }
)


--------

= Table.TransformColumns(
    Source,
    {
        {"Aux_Disk_Provisiones_VAL",
            each
                let
                    vText = Text.From(_),
                    // por si viene con punto decimal, lo paso a coma para poder convertir
                    vTextComa = Text.Replace(vText, ".", ","),
                    n = if Value.Is(_, type number)
                        then _
                        else try Number.FromText(vTextComa, "es-EC") otherwise null
                in
                    if n = null
                    then vText       // deja tal cual si no es n√∫mero
                    else Number.ToText(n, "N2", "es-EC"),   // TEXTO con 2 decimales y coma
            type text}
    }
)