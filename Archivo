= Table.TransformColumns(
    Source,
    {
        {"CPU_Used_Porcentaje",
            each
                let
                    txt = Text.Replace(Text.From(_), ".", ","),
                    val = try Number.FromText(txt, "es-EC") otherwise null
                in
                    if val = null then null else Number.Round(val, 2),
            type number}
    }
)


--------

= Table.TransformColumns(
    Source,
    {
        {"Aux_Disk_Provisiones_VAL",
            each
                let
                    valorOriginal = Text.From(_),              // convierte a texto cualquier tipo
                    valorLimpio = Text.Replace(valorOriginal, ".", ","),  // usa coma decimal
                    numero = try Number.FromText(valorLimpio, "es-EC") otherwise null,
                    textoFinal =
                        if numero <> null then
                            Text.From(Number.Round(numero, 2), "es-EC")   // redondea y convierte a texto
                        else
                            valorOriginal                                // deja el texto original si no es n√∫mero
                in
                    textoFinal,
            type text}
    }
)