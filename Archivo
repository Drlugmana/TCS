    var headers = new[]
    {
        "Server Name", "Server Class", "Server Group","Operational State",
        "Environment", "Related Application", "Owned By", "Manufacturer" ,
        "Sistema Operativo","Version Sistema Operativo","Gestionado Por","Es Virtual"
    };

    // ðŸ”½ Eliminar de la lista de No Monitoreados los que ya estÃ¡n en Monitoreados
    var monitoredHostnames = new HashSet<string>(
        _serversWithEntities.Select(s => s.Server.Name?.Trim().ToUpperInvariant() ?? "")
    );

    _serversNoMatch = _serversNoMatch
        .Where(s => !monitoredHostnames.Contains(s.Name?.Trim().ToUpperInvariant() ?? ""))
        .ToList();

    for (int i = 0; i < headers.Length; i++)
    {
        worksheet.Cells[1, i + 1].Value = headers[i];
        worksheet.Cells[1, i + 1].Style.Font.Bold = true;
    }