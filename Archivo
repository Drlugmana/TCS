= Table.TransformColumns(
    Source,
    {
        {"CPU_Used_Porcentaje",
            each
                let
                    txt = Text.Replace(Text.From(_), ".", ","),
                    val = try Number.FromText(txt, "es-EC") otherwise null
                in
                    if val = null then null else Number.Round(val, 2),
            type number}
    }
)


--------

= Table.TransformColumns(
    Source,
    {
        {"Aux_Disk_Provisiones_VAL",
            each
                let
                    t = Text.From(_),
                    // intenta parsear tal cual (soporta 1.86E+01)
                    n = try Number.FromText(t, "en-US") 
                        otherwise try Number.FromText(t, "es-EC") 
                        otherwise null
                in
                    if n=null then null else Number.Round(n, 2),
            type number}
    }
)

