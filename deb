import React from "react";
import ReactDOM from "react-dom/client";
import { BrowserRouter } from "react-router-dom";
import App from "./App.jsx";
import ErrorBoundary from "./components/ErrorBoundary.jsx";

ReactDOM.createRoot(document.getElementById("root")).render(
  <React.StrictMode>
    <ErrorBoundary>
      <BrowserRouter>
        <App />
      </BrowserRouter>
    </ErrorBoundary>
  </React.StrictMode>
);

----

import React from "react";
import { Routes, Route, Navigate, Link } from "react-router-dom";
import TCSProblems from "./pages/TCSProblems.jsx";
import OtherProblems from "./pages/OtherProblems.jsx";
import AllProblems from "./pages/AllProblems.jsx";

function Nav() {
  const linkStyle = { color: "#fff", textDecoration: "none", padding: "0.5rem 1rem" };
  return (
    <div style={{ background: "#1f2a38", padding: "0.5rem 0", marginBottom: "1rem" }}>
      <div style={{ maxWidth: 900, margin: "0 auto", display: "flex", gap: 12 }}>
        <Link to="/tcs" style={linkStyle}>TCS</Link>
        <Link to="/otros" style={linkStyle}>Otros</Link>
        <Link to="/todos" style={linkStyle}>Todos</Link>
      </div>
    </div>
  );
}

export default function App() {
  return (
    <div>
      <Nav />
      <Routes>
        <Route path="/" element={<Navigate to="/tcs" replace />} />
        <Route path="/tcs" element={<TCSProblems />} />
        <Route path="/otros" element={<OtherProblems />} />
        <Route path="/todos" element={<AllProblems />} />
        {/* 404 controlado */}
        <Route path="*" element={<div style={{ padding: 24 }}>Ruta no encontrada</div>} />
      </Routes>
    </div>
  );
}


---

import React from "react";

export default class ErrorBoundary extends React.Component {
  constructor(props) {
    super(props);
    this.state = { hasError: false, error: null };
  }
  static getDerivedStateFromError(err) {
    return { hasError: true, error: err };
  }
  componentDidCatch(error, info) {
    // Muestra en consola para depurar
    console.error("[ErrorBoundary]", error, info);
  }
  render() {
    if (this.state.hasError) {
      return (
        <div style={{ padding: "2rem" }}>
          <h2 style={{ color: "crimson" }}>Se produjo un error en la aplicaci√≥n</h2>
          <pre style={{ whiteSpace: "pre-wrap", color: "#111", background:"#f6f6f6", padding:"1rem", borderRadius:8 }}>
            {String(this.state.error?.stack || this.state.error || "Error")}
          </pre>
        </div>
      );
    }
    return this.props.children;
  }
}

