function towerToIconPath(towerKey) {
  if (!towerKey) return null;
  const key = String(towerKey).toLowerCase();

  // Wintel
  if (key.includes('wintel') || key.includes('windows')) {
    return '/icons/towers/wintel.jfif';
  }

  // Base de datos / BDD
  if (key.includes('bdd') || key.includes('base de datos') || key.includes('database') || key.includes('data')) {
    return '/icons/towers/base.jfif';
  }

  // Unix / Linux / AIX
  if (key.includes('unix') || key.includes('aix') || key.includes('linux')) {
    return '/icons/towers/unix.jfif';
  }

  return null;
}